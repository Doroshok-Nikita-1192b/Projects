@model IEnumerable<TankiGGG.Models.Map>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Map List</h2>
        </div>
        @if(User.IsInRole("admin") || User.IsInRole("moderator"))
        {
        <div class="col-6 text-right">
            <a asp-controller="Map" asp-action="Create" class="btn btn-primary">Create new Map</a>
        </div>
        }
    </div>
    <br />

    @if(Model.Count() > 0)
    {
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Map name
                </th>
                <th>
                    Action
                </th>
            </tr>
        </thead>
        <tbody>
           @foreach (var map in Model)
            {
            <tr>
                <td width="70%">@map.MapName</td>
                @if(User.IsInRole("admin")|| User.IsInRole("moderator"))
                {
                <td width="30%">
                    <div class="w-100 btn-group" role="group">
                        <a asp-controller="Map" asp-action="Update" asp-route-Id="@map.Id" class="btn btn-primary mx-1">Update</a>
                        <a asp-controller="Map" asp-action="Delete" asp-route-Id="@map.Id" class="btn btn-danger mx-1">Delete</a>
                    </div>
                </td>
                }
            </tr>
            }
        </tbody>
    </table>
    }
    else
    {
    <p>No Maps created yet</p>
    }

</div>